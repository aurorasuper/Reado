@model Read_do.Models.BookEntryDetails

@{
    ViewData["Title"] = "Delete from list";
}

<h3>Do you want to delete this book from your list?</h3>
<p class="text-danger">@ViewBag.DeleteEntry</p>
<div>
    <h4>Book details</h4>
    <hr />
    <div class="container" id="book_card">
        <div class="row justify-content-md-center">
            <div class="col col-lg-2 ">

              <img src="@Html.DisplayFor(model => model.imageUrl)" alt="@Html.DisplayFor(model => model.title) Cover" height="200">

            </div>
            <div class="col-md-auto">
                <h6>
                    @Html.DisplayFor(model => model.title)
                </h6>
                <p>@Html.DisplayNameFor(model => model.author): @Html.DisplayFor(model => model.author)</p>
                <p>@Html.DisplayNameFor(model => model.publishedYear): @Html.DisplayFor(model => model.publishedYear)</p>
                <p>@Html.DisplayNameFor(model => model.publisher): @Html.DisplayFor(model => model.publisher)</p>
                <p>@Html.DisplayNameFor(model => model.isbn): @Html.DisplayFor(model => model.isbn)</p>
 
            </div>
            <div class="col col-lg-2">
                @if (!Model.isRead)
                {
                    <p>You have not read this book yet.</p>
                }else{
                    <p>My Score: @Html.DisplayFor(model => model.score)</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-row-reverse">
   <div class="p-2">
       @using (Html.BeginForm("DeleteEntry", "UserTest", FormMethod.Post))
                    {
                        <input type="hidden" id="id" name="id" value=@Html.DisplayFor(model => model.id) >
                        <input class="btn btn-danger" type="submit" value="Confirm">
                    }
  </div>
  <div class="p-2">

    <button type="button" onclick="location.href='@Url.Action("MyBooks", "UserTest")'" class="btn btn-secondary" >
            Cancel
    </button>
  </div>        
</div>
